extends layouts/main.pug

block content
    .form-container
        form(action=routes.changePassword, method="post")
            input(type="text", placeholder="Current Password" name="current_pwd")
            input(type="text", placeholder="New Password" name="new_pwd")
            input(type="text", placeholder="Verify New Password" name="verify_new_pwd")
            input(type="submit", value="Change Password")